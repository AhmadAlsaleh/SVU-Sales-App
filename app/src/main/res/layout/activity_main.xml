<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazy_iter.example.svusalesapp.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/toSellersBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sellers"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/toInfoBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Data"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>

    <Button
        android:id="@+id/toSalesBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Sales"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/toComBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Commission"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

</LinearLayout>